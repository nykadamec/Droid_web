{
  "name": "droid-web",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../mcp-server && npm install",
    "start": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "cd mcp-server && npm run dev",
    "build": "npm run build:server && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:server": "cd mcp-server && npm run build",
    "start:server": "cd mcp-server && npm start",
    "tunnel": "concurrently \"npm run dev\" \"npm run tunnel:only\"",
    "tunnel:only": "cloudflared tunnel --config cloudflared.yml run webterm"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
